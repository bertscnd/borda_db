<div class="page-header">
  <h1>
    My Surveys
    <a href="/surveys/new" class="btn btn-lg btn-success">New Survey</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Survey name</th>
        <th>Question text</th>
        <th>Link to take survey</th>
        <th>Actions</th>
      </tr>

      <% @surveys.each do |survey| %>
        <% if current_user == survey.user %>
          <tr>
            <td><%= survey.survey_name %></td>
            <td><%= survey.question_text %></td>
            <td><a href="/surveys/<%= survey.id %>">https://borda-co-bertscnd.c9users.io/surveys/<%= survey.id %></a></td>
            <td>
              <a href="/surveys/results/<%= survey.id %>" class="btn btn-primary">Results</a>
              <a href="/surveys/<%= survey.id %>/edit" class="btn btn-warning">Edit</a>
              <a href="/delete_survey/<%= survey.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
            </td>
          </tr>
        <% end %>
      <% end %>
    </table>
    <%= paginate @surveys, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
