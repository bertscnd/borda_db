<!-- Validation failure messages -->
<% if @survey.errors.any? %>
  <% @survey.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Survey</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_survey" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for survey_name -->
      <div class="form-group">
        <input type="text" id="survey_name" name="survey_name" placeholder="Name your survey" class="form-control" value="<%= @survey.survey_name %>">
      </div>

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <!-- Label and input for question_text -->
      <div class="form-group">
        <input type="text" id="question_text" name="question_text" placeholder="Write your survey question here" class="form-control" value="<%= @survey.question_text %>">
      </div>
      
      <legend></legend>
      
      <div class="form-group">
        <button class="btn btn-success">
          Create Survey
        </button>
        or
        <a href="/surveys">Cancel</a>
      </div>
    </form>
  </div>
</div>
